<!DOCTYPE html>
<html>
<head>
  <title>Revbundle | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header>
      <%= image_tag("rails.png", :alt => "Revbundle", :class => "pic") %>
      <search class="search">
      	<%= text_field_tag :search, params[:search], :class => "round", :placeholder => "search" %>
      	<%= submit_tag "Search", :name => nil %>
      </search>
    </header>
    <nav class="nave">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Restaurant", restaurants_path %></li>
      </ul>
    </nav>
    <section class="main">	
      <%= yield %>
    </section>
  </div>
</body>
</html>
