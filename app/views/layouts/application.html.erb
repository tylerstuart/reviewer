<!DOCTYPE html>
<html>
<head>
  <title>Revbundle | <%= yield(:title) %></title>
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'print' %>
  <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
  <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header class="round">
       <table class="main_head"> 
        <tr>
          <td class="bund_img">
            <h1>
              <%= image_tag("rails.png", :alt => "Revbundle", :class => "pic") %> 
              Revbundle
            </h1>
          </td>
          <td class="bund_search">
              <%= text_field_tag :search, params[:search], :class => "round", :placeholder => "search" %>
      	      <%= submit_tag "Search", :name => nil %>
          </td>
          <td class="sign_up">
            <% if !signed_in? %>
            <%= link_to "Sign up now", signup_path, :class => "signup_button round" %>
            <% end %>
          </td>
        </tr>
      </table>
    </header>
    <nav class="round">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Restaurant", restaurants_path %></li>
        <% if signed_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li><%= link_to "Sign out", signout_path, method: "delete" %> </li> 
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
        <% end %>  
      </ul>
    </nav>

    <table class="profile" summary="Restaurant information"
      <tr>
        <td class="sidebar round">
          <h1>
            ads
          </h1>
        </td>
        <td class="main"
          <h1>
            <%= yield %>
          </h1>
        </td>
        <td class="sidebar round">
          <h1>
            ads
          </h1>
        </td>
      </tr>
    </table>
  </div>  
</body>
</html>
